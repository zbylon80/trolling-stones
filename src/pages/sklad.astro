---
import Layout from '@components/Layout.astro';
import Lightbox from '@components/Lightbox.astro';

const members = [
  { key: 'walec', name: "Artur 'Walec' Dembicki", role: 'gitara prowadząca' },
  { key: 'slodki', name: "Krzysztof 'Słodki' Słodkowski", role: 'bas' },
  { key: 'hamo', name: "Piotr 'Hamo' Abraham", role: 'perkusja' },
  { key: 'piter', name: "Piotr 'Piter' Jędrzejewski", role: 'klawisze' },
  { key: 'wiciu', name: "Witold 'Wiciu' Piasek", role: 'gitara rytmiczna' },
  { key: 'zbylon', name: "Zbigniew 'Zbylon' Kalinowski", role: 'wokal, harmonijka' },
];
---
<Layout title="Skład - TRolling Stones">
  <section class="container py-12">
    <h1 class="mb-6 text-3xl font-bold">Skład</h1>

    <div class="grid gap-6 sm:grid-cols-2 md:grid-cols-3">
      {members.map((member) => (
        <figure class="group text-center">
          <div class="overflow-hidden rounded-lg">
            <img
              src={`/images/members/${member.key}.jpg`}
              alt={`${member.name} - ${member.role}`}
              class="mx-auto cursor-zoom-in rounded-lg transition-transform duration-300 ease-out group-hover:scale-105"
              data-lightbox
              loading="lazy"
            />
          </div>
          <figcaption class="mt-2 text-sm font-medium">
            {member.name} - {member.role}
          </figcaption>
        </figure>
      ))}
    </div>
  </section>
  <Lightbox />
</Layout>
