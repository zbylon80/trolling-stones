---
import Layout from "@components/Layout.astro";
import Lightbox from "@components/Lightbox.astro";
const photos = [
  { src: '/images/poster01.jpg', alt: 'Plakat 01 - TRolling Stones' },
  { src: '/images/poster02.jpg', alt: 'Plakat 02 - TRolling Stones' },
  { src: '/images/poster03.jpg', alt: 'Plakat 03 - TRolling Stones' },
  { src: '/images/poster04.jpg', alt: 'Plakat 04 - TRolling Stones' },
  { src: '/images/background01.jpg', alt: 'Background 01 - TRolling Stones' },
];
---
<Layout title="Galeria - TRolling Stones">
  <section class="container py-12">
    <h1 class="text-3xl font-bold">Galeria</h1>
    <div class="mt-6 grid sm:grid-cols-2 md:grid-cols-3 gap-4">
      {photos.map((p) => (
        <figure class="group overflow-hidden rounded-lg" style="aspect-ratio: 16 / 9;">
          <img
            src={p.src}
            alt={p.alt}
            class="w-full h-full object-cover transition-transform duration-300 ease-out group-hover:scale-105 cursor-zoom-in"
            data-lightbox data-lightbox-hide-caption
            loading="lazy"
          />
        </figure>
      ))}
    </div>
  </section>
  <Lightbox />
</Layout>
