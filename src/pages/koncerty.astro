---
import Layout from "@components/Layout.astro";
const gigs = [
  {
    date: '2025-12-06',
    city: 'Gdynia',
    venue: 'Blues Club',
    tickets: null, // sprzedaż wkrótce
  },
];
---
<Layout title="Koncerty - TRolling Stones">
  <section class="container py-12">
    <h1 class="text-3xl font-bold">Koncerty</h1>
    <p class="mt-2 text-neutral-300">Nadchodzące daty występów.</p>

    <div class="mt-6 divide-y divide-neutral-800 border border-neutral-800 rounded-lg overflow-hidden">
      {gigs.length === 0 ? (
        <div class="p-6 text-neutral-400">Brak ogłoszonych koncertów.</div>
      ) : (
        gigs.map(g => (
          <div class="p-6 flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
            <div>
              <div class="font-semibold">{new Date(g.date).toLocaleDateString('pl-PL')}</div>
              <div class="text-neutral-300">{g.city} - {g.venue}</div>
            </div>
            <div>
              {g.tickets ? (
                <a class="px-3 py-1 rounded bg-brand-600 hover:bg-brand-500 text-white" href={g.tickets}>Bilety</a>
              ) : (
                <span class="text-neutral-400">Sprzedaż wkrótce</span>
              )}
            </div>
          </div>
        ))
      )}
    </div>
  </section>
</Layout>

<script type="application/ld+json">{JSON.stringify({
  '@context': 'https://schema.org',
  '@graph': gigs.map(g => ({
    '@type': 'MusicEvent',
    name: `TRolling Stones - ${g.venue}`,
    startDate: g.date,
    eventStatus: 'https://schema.org/EventScheduled',
    location: {
      '@type': 'Place',
      name: g.venue,
      address: { '@type': 'PostalAddress', addressLocality: g.city, addressCountry: 'PL' }
    },
    performer: { '@type': 'MusicGroup', name: 'TRolling Stones' },
    url: (Astro.site?.origin ? `${Astro.site.origin}/koncerty` : '/koncerty'),
    offers: g.tickets ? { '@type': 'Offer', url: g.tickets, availability: 'https://schema.org/InStock' } : undefined
  }))
})}</script>

