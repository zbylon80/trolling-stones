---
import Layout from "@components/Layout.astro";
import Lightbox from "@components/Lightbox.astro";

const photos = [
  { src: "/images/poster01.jpg", alt: "Poster 01 - TRolling Stones" },
  { src: "/images/poster02.jpg", alt: "Poster 02 - TRolling Stones" },
  { src: "/images/poster03.jpg", alt: "Poster 03 - TRolling Stones" },
  { src: "/images/poster04.jpg", alt: "Poster 04 - TRolling Stones" },
  { src: "/images/background01.jpg", alt: "Background 01 - TRolling Stones" }
];
---
<Layout lang="en" title="Gallery - TRolling Stones">
  <section class="container py-12">
    <h1 class="text-3xl font-bold">Gallery</h1>
    <div class="mt-6 grid gap-4 sm:grid-cols-2 md:grid-cols-3 md:auto-rows-[minmax(200px,_1fr)]">
      {photos.map((p, index) => {
        const isPoster = index === 0;
        return (
          <figure
            class:list={{
              "group overflow-hidden rounded-lg aspect-[16/9] md:aspect-auto md:h-full": true,
              "md:row-span-2": isPoster
            }}
          >
            <img
              src={p.src}
              alt={p.alt}
              class="w-full h-full object-cover transition-transform duration-300 ease-out group-hover:scale-105 cursor-zoom-in"
              data-lightbox
              data-lightbox-hide-caption
              loading="lazy"
            />
          </figure>
        );
      })}
    </div>
  </section>
  <Lightbox />
</Layout>
