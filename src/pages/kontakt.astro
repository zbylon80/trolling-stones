---
import Layout from "@components/Layout.astro";
---
<Layout title="Kontakt — TRolling Stones">
  <section class="container py-12">
    <h1 class="text-3xl font-bold">Kontakt</h1>
    <p class="mt-2 text-neutral-300">Rezerwacje koncertów, media, współprace.</p>
    <div class="mt-6 grid md:grid-cols-2 gap-6">
      <div class="space-y-2">
        <h2 class="text-xl font-semibold">Booking / Management</h2>
        <p class="text-neutral-300">
          E-mail: <a href="mailto:booking@trollingstones.pl">booking@trollingstones.pl</a>
        </p>
        <p class="text-neutral-300">
          Tel.: <a href="tel:+48509243245">+48 509 243 245</a> — Manager: Daniel Macidłowski
        </p>
      </div>
      <div class="space-y-2">
        <h2 class="text-xl font-semibold">Social media</h2>
        <ul class="space-y-1 text-neutral-300">
          <li>
            <a class="inline-flex items-center gap-2" href="https://www.facebook.com/stones3city" target="_blank" rel="noopener">
              <img src="https://cdn.simpleicons.org/facebook/ffffff" alt="" width="20" height="20" loading="lazy" />
              <span>Facebook</span>
            </a>
          </li>
          <li>
            <a class="inline-flex items-center gap-2" href="https://www.instagram.com/trollnstones/?hl=en" target="_blank" rel="noopener">
              <img src="https://cdn.simpleicons.org/instagram/ffffff" alt="" width="20" height="20" loading="lazy" />
              <span>Instagram</span>
            </a>
          </li>
          <li>
            <a class="inline-flex items-center gap-2" href="https://www.tiktok.com/@trollnstones" target="_blank" rel="noopener">
              <img src="https://cdn.simpleicons.org/tiktok/ffffff" alt="" width="20" height="20" loading="lazy" />
              <span>TikTok</span>
            </a>
          </li>
          <li>
            <a class="inline-flex items-center gap-2" href="https://www.youtube.com/@TRollnStones" target="_blank" rel="noopener">
              <img src="https://cdn.simpleicons.org/youtube/ffffff" alt="" width="20" height="20" loading="lazy" />
              <span>YouTube</span>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </section>
</Layout>
