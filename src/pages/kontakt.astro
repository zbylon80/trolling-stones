---
import Layout from '@components/Layout.astro';
import Lightbox from '@components/Lightbox.astro';
---
<Layout title="Kontakt - TRolling Stones">
  <section class="container py-12">
    <h1 class="text-3xl font-bold">Kontakt</h1>
    <p class="mt-2 text-neutral-300">Rezerwacje koncertów, media, współpraca.</p>

    <div class="mt-6 grid gap-6 md:grid-cols-2">
      <div class="space-y-4">
        <div class="sm:flex sm:items-start sm:gap-4">
          <div class="group mb-3 h-40 w-40 shrink-0 overflow-hidden rounded-lg shadow sm:mb-0">
            <img
              src="/images/manager.jpg"
              alt="Daniel Macidłowski – Manager TRolling Stones"
              class="h-40 w-40 cursor-zoom-in rounded-lg object-cover transition-transform duration-300 ease-out group-hover:scale-105"
              width="160"
              height="160"
              loading="lazy"
              data-lightbox
            />
          </div>
          <div class="space-y-2">
            <h2 class="text-xl font-semibold">Manager Daniel Macidłowski</h2>
            <p class="text-neutral-300">
              E-mail:
              <a class="hover:underline" href="mailto:booking@trollingstones.pl">
                booking@trollingstones.pl
              </a>
            </p>
            <p class="text-neutral-300">
              Tel.:
              <a class="hover:underline" href="tel:+48509243245">
                +48 509 243 245
              </a>
            </p>
            <p>
              <a class="text-brand-500 hover:underline" href="/assets/Rider-techniczy-Trolling-Stones-25.03.2025.pdf" target="_blank" rel="noopener">
                Rider techniczny (PDF)
              </a>
            </p>
          </div>
        </div>
      </div>
      <div class="space-y-2">
        <h2 class="text-xl font-semibold">Social media</h2>
        <ul class="space-y-1 text-neutral-300">
          <li>
            <a
              class="inline-flex items-center gap-2"
              href="https://www.facebook.com/stones3city"
              target="_blank"
              rel="noopener"
            >
              <img src="https://cdn.simpleicons.org/facebook/ffffff" alt="" width="20" height="20" loading="lazy" />
              <span>Facebook</span>
            </a>
          </li>
          <li>
            <a
              class="inline-flex items-center gap-2"
              href="https://www.instagram.com/trollnstones/?hl=en"
              target="_blank"
              rel="noopener"
            >
              <img src="https://cdn.simpleicons.org/instagram/ffffff" alt="" width="20" height="20" loading="lazy" />
              <span>Instagram</span>
            </a>
          </li>
          <li>
            <a
              class="inline-flex items-center gap-2"
              href="https://www.tiktok.com/@trollnstones"
              target="_blank"
              rel="noopener"
            >
              <img src="https://cdn.simpleicons.org/tiktok/ffffff" alt="" width="20" height="20" loading="lazy" />
              <span>TikTok</span>
            </a>
          </li>
          <li>
            <a
              class="inline-flex items-center gap-2"
              href="https://www.youtube.com/@TRollnStones"
              target="_blank"
              rel="noopener"
            >
              <img src="https://cdn.simpleicons.org/youtube/ffffff" alt="" width="20" height="20" loading="lazy" />
              <span>YouTube</span>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </section>
  <Lightbox />
</Layout>
