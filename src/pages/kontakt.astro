---
import Layout from "@components/Layout.astro";
---
<Layout title="Kontakt — TRolling Stones">
  <section class="container py-12">
    <h1 class="text-3xl font-bold">Kontakt</h1>
    <p class="mt-2 text-neutral-300">Rezerwacje koncertów, media, współprace.</p>
    <div class="mt-6 grid md:grid-cols-2 gap-6">
      <div class="space-y-2">
        <h2 class="text-xl font-semibold">Booking / Management</h2>
        <p class="text-neutral-300">
          E-mail: <a href="mailto:booking@trolling-stones.pl">booking@trolling-stones.pl</a>
        </p>
      </div>
      <div class="space-y-2">
        <h2 class="text-xl font-semibold">Social media</h2>
        <ul class="space-y-1 text-neutral-300">
          <li><a href="https://www.facebook.com/stones3city" target="_blank" rel="noopener">Facebook</a></li>
          <li><a href="https://www.instagram.com/trollnstones/?hl=en" target="_blank" rel="noopener">Instagram</a></li>
          <li><a href="https://www.tiktok.com/@trollnstones" target="_blank" rel="noopener">TikTok</a></li>
          <li><a href="https://www.youtube.com/@TRollnStones" target="_blank" rel="noopener">YouTube</a></li>
        </ul>
      </div>
    </div>
  </section>
</Layout>
