---
import Layout from "@components/Layout.astro";
import YouTubeEmbed from "@components/YouTubeEmbed.astro";
---
<Layout title="TRolling Stones - oficjalna strona" description="Muzyka, koncerty, zdjecia i aktualnosci zespolu TRolling Stones.">
  <section class="container py-12 md:py-16">
    <h1 class="sr-only">TRolling Stones - oficjalna strona</h1>
    <img
      src="/images/hero.jpg"
      alt="TRolling Stones - Tribute to The Rolling Stones"
      class="w-full max-w-3xl rounded-lg mx-auto"
      loading="eager"
      width="1200"
      height="1200"
    />
    <p class="mt-6 max-w-2xl text-neutral-300 mx-auto text-center">
      Rock'n'roll z pulsujaca energia. Sprawdz nasze koncerty, obejrzyj klipy i badz na biezaco z nowosciami.
    </p>
    <div class="mt-8 flex gap-3 justify-center">
      <a class="px-4 py-2 rounded bg-brand-600 hover:bg-brand-500 text-white" href="/koncerty">Zobacz koncerty</a>
      <a class="px-4 py-2 rounded border border-neutral-700 hover:border-neutral-600" href="/aktualnosci">Aktualnosci</a>
    </div>
  </section>

  <section class="container py-10">
    <h2 class="text-2xl font-semibold mb-4">Najnowszy klip</h2>
    <YouTubeEmbed id="Va2NqLJPnkw" title="Najnowszy singiel" />
  </section>

  <section class="container py-10">
    <h2 class="text-2xl font-semibold mb-4">Sluchaj i obserwuj</h2>
    <ul class="grid md:grid-cols-4 gap-4 text-neutral-300">
      <li>
        <a class="inline-flex items-center gap-2" href="https://www.youtube.com/@TRollnStones" target="_blank" rel="noopener">
          <img src="https://cdn.simpleicons.org/youtube/ffffff" alt="" width="20" height="20" loading="lazy" />
          <span>YouTube</span>
        </a>
      </li>
      <li>
        <a class="inline-flex items-center gap-2" href="https://www.facebook.com/stones3city" target="_blank" rel="noopener">
          <img src="https://cdn.simpleicons.org/facebook/ffffff" alt="" width="20" height="20" loading="lazy" />
          <span>Facebook</span>
        </a>
      </li>
      <li>
        <a class="inline-flex items-center gap-2" href="https://www.instagram.com/trollnstones/?hl=en" target="_blank" rel="noopener">
          <img src="https://cdn.simpleicons.org/instagram/ffffff" alt="" width="20" height="20" loading="lazy" />
          <span>Instagram</span>
        </a>
      </li>
      <li>
        <a class="inline-flex items-center gap-2" href="https://www.tiktok.com/@trollnstones" target="_blank" rel="noopener">
          <img src="https://cdn.simpleicons.org/tiktok/ffffff" alt="" width="20" height="20" loading="lazy" />
          <span>TikTok</span>
        </a>
      </li>
    </ul>
  </section>
</Layout>

