---
import Layout from '@components/Layout.astro';
import YouTubeCarousel from '@components/YouTubeCarousel.astro';
---
<Layout
  title="TRolling Stones - oficjalna strona"
  description="Muzyka, koncerty, zdjęcia i aktualności zespołu TRolling Stones."
>
  <section class="container py-12 md:py-16">
    <h1 class="sr-only">TRolling Stones - oficjalna strona</h1>
    <img
      src="/images/hero.jpg"
      alt="TRolling Stones - Tribute to The Rolling Stones"
      class="mx-auto w-full max-w-3xl rounded-lg"
      loading="eager"
      width="1200"
      height="1200"
    />
    <p class="mx-auto mt-6 max-w-2xl text-center text-neutral-300">
      Rock'n'roll z pulsującą energią. Sprawdź nasze koncerty, obejrzyj klipy i bądź na bieżąco z nowościami.
    </p>
    <div class="mt-8 flex justify-center gap-3">
      <a class="rounded bg-brand-600 px-4 py-2 text-white hover:bg-brand-500" href="/koncerty">
        Zobacz koncerty
      </a>
      <a class="rounded border border-neutral-700 px-4 py-2 hover:border-neutral-600" href="/aktualnosci">
        Aktualności
      </a>
    </div>
  </section>

  <section class="container py-10">
    <h2 class="mb-4 text-2xl font-semibold">Nasze klipy</h2>
    <YouTubeCarousel />
  </section>

  <section class="container py-10">
    <h2 class="mb-4 text-2xl font-semibold">Słuchaj i obserwuj</h2>
    <ul class="grid gap-4 text-neutral-300 md:grid-cols-4">
      <li>
        <a
          class="inline-flex items-center gap-2"
          href="https://www.youtube.com/@TRollnStones"
          target="_blank"
          rel="noopener"
        >
          <img src="https://cdn.simpleicons.org/youtube/ffffff" alt="" width="20" height="20" loading="lazy" />
          <span>YouTube</span>
        </a>
      </li>
      <li>
        <a
          class="inline-flex items-center gap-2"
          href="https://www.facebook.com/stones3city"
          target="_blank"
          rel="noopener"
        >
          <img src="https://cdn.simpleicons.org/facebook/ffffff" alt="" width="20" height="20" loading="lazy" />
          <span>Facebook</span>
        </a>
      </li>
      <li>
        <a
          class="inline-flex items-center gap-2"
          href="https://www.instagram.com/trollnstones/?hl=en"
          target="_blank"
          rel="noopener"
        >
          <img src="https://cdn.simpleicons.org/instagram/ffffff" alt="" width="20" height="20" loading="lazy" />
          <span>Instagram</span>
        </a>
      </li>
      <li>
        <a
          class="inline-flex items-center gap-2"
          href="https://www.tiktok.com/@trollnstones"
          target="_blank"
          rel="noopener"
        >
          <img src="https://cdn.simpleicons.org/tiktok/ffffff" alt="" width="20" height="20" loading="lazy" />
          <span>TikTok</span>
        </a>
      </li>
    </ul>
  </section>
</Layout>
