---
import Layout from "@components/Layout.astro";
import YouTubeEmbed from "@components/YouTubeEmbed.astro";
---
<Layout title="TRolling Stones — oficjalna strona" description="Muzyka, koncerty, zdjęcia i aktualności zespołu TRolling Stones.">
  <section class="container py-12 md:py-16">
    <h1 class="sr-only">TRolling Stones — oficjalna strona</h1>
    <img
      src="/images/hero.jpg"
      alt="TRolling Stones — Tribute to The Rolling Stones"
      class="w-full max-w-3xl rounded-lg mx-auto"
      loading="eager"
      width="1200"
      height="1200"
    />
    <p class="mt-6 max-w-2xl text-neutral-300 mx-auto text-center">
      Rock’n’roll z pulsującą energią. Sprawdź nasze koncerty, obejrzyj klipy i bądź na bieżąco z nowościami.
    </p>
    <div class="mt-8 flex gap-3 justify-center">
      <a class="px-4 py-2 rounded bg-brand-600 hover:bg-brand-500 text-white" href="/koncerty">Zobacz koncerty</a>
      <a class="px-4 py-2 rounded border border-neutral-700 hover:border-neutral-600" href="/aktualnosci">Aktualności</a>
    </div>
  </section>

  <section class="container py-10">
    <h2 class="text-2xl font-semibold mb-4">Najnowszy klip</h2>
    <YouTubeEmbed id="Va2NqLJPnkw" title="Najnowszy singiel" />
  </section>

  <section class="container py-10">
    <h2 class="text-2xl font-semibold mb-4">Słuchaj i obserwuj</h2>
    <ul class="grid md:grid-cols-4 gap-4 text-neutral-300">
      <li><a href="https://www.youtube.com/@TRollnStones" target="_blank" rel="noopener">YouTube</a></li>
      <li><a href="https://www.facebook.com/stones3city" target="_blank" rel="noopener">Facebook</a></li>
      <li><a href="https://www.instagram.com/trollnstones/?hl=en" target="_blank" rel="noopener">Instagram</a></li>
      <li><a href="https://www.tiktok.com/@trollnstones" target="_blank" rel="noopener">TikTok</a></li>
    </ul>
  </section>
</Layout>
